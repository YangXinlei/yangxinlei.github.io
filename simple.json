---
layout: null
---
{
    "bloger":
    {
        "name":"{{ site.title | xml_escape }}",
        "url":"{{site.url}}"
    },
    "twitter":
    {
        "name":"{{site.title  | cgi_escape  }}",
        "url":"{{site.url}}"
    },
    "posts":
    [
        {% for post in site.posts %}
        {
            "title":"{{post.title}}",
            "url":"{{site.url}}{{post.url}}",
            "date":"{{post.date|date_to_xmlschema}}",
            "tags":"{{post.categories | array_to_sentence_string }}",
            "likes":15,
            "comments":
            [
                {"comment":"你好", "date":"{{post.date|date_to_xmlschema}}"},
                {"comment":"不错", "date":"{{post.date|date_to_xmlschema}}"}
            ]
        }{% if forloop.last == false %},{% endif %}
        {% endfor %}    
    ]
}   
    